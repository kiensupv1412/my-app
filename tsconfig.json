{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "outDir": "./.dts",
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./*"]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "server/modules/gsc/src/index.ts",
    "server/modules/gsc/src/gsc.ts",
    "server/modules/gsc/src/auth.ts",
    "server/modules/gsc/bin.ts",
    "server/modules/gsc/cli.ts",
    "server/modules/gsc/index.ts",
    "server/modules/gsc/src/utils.ts",
    "server/modules/gsc/src/types.ts"
, "components/editor/editor-kit.tsx", "components/editor/plate-editor.tsx"  ],
  "exclude": ["node_modules"]
}
